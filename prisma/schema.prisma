generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DEVELOPMENT_DATABASE_URL")
}

enum PunishmentType {
  Warn
  Timeout
  Kick
  Softban
  Ban
  AntiRaidNuke
  Unban
}

model Punishment {
  id      Int            @id @unique
  user    String
  moderator String
  type    PunishmentType
  reason String
  guild   Guild          @relation(fields: [guildId], references: [id])
  guildId String
  createdAt DateTime @default(now())
  expires DateTime?
}

model Guild {
  id          String       @id @unique
  punishments Punishment[]
}
