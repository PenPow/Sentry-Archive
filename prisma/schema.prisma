generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DEVELOPMENT_DATABASE_URL")
}

enum PunishmentType {
  Warn
  Timeout
  Kick
  Softban
  Ban
  Unban
}

model Punishment {
  id              Int            @id @unique @default(autoincrement())
  caseID          Int
  user            User           @relation(fields: [userID], references: [id])
  userID          String
  moderator       String
  type            PunishmentType
  reason          String
  guild           Guild          @relation(fields: [guildID], references: [id])
  guildID         String
  createdAt       DateTime       @default(now())
  expires         DateTime?
  modLogID        String?
  modLogChannelID String?
  reference       Int?
}

model Settings {
  id         String   @id @unique
  guild      Guild    @relation(fields: [id], references: [id])
  automod    Boolean? @default(true)
  phrase     Boolean? @default(true)
  username   Boolean? @default(true)
  invite     Boolean? @default(false)
  url        Boolean? @default(true)
  spam       Boolean? @default(true)
  clamav     Boolean? @default(true)
  enforce2fa Boolean? @default(false)
  statistics Boolean? @default(true)
  logChannelId String?
  language String? @default("en-GB")
}

model Guild {
  id          String       @id @unique
  punishments Punishment[]
  settings    Settings?
}

model User {
  id          String       @id @unique
  punishments Punishment[]
  secret      String?
  backup      String?
}
