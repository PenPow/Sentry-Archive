generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DEVELOPMENT_DATABASE_URL")
}

enum PunishmentType {
  Warn
  Timeout
  Kick
  Softban
  Ban
  AntiRaidNuke
  Unban
}

model Punishment {
  id        Int            @id @unique @default(autoincrement())
  caseID    Int
  user      User           @relation(fields: [userID], references: [id])
  userID    String
  moderator String
  type      PunishmentType
  reason    String
  guild     Guild          @relation(fields: [guildID], references: [id])
  guildID   String
  createdAt DateTime       @default(now())
  expires   DateTime?
  modLogID  String?
  modLogChannelID String?
  reference Int?
}

model Guild {
  id          String       @id @unique
  punishments Punishment[]
}

model User {
  id          String       @id @unique
  punishments Punishment[]
}
